/* pages/timetable/timetable.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F5F7FA;
  padding-right: 20rpx;
}

/* 顶部星期 */
.top {
	padding-left: 88rpx;
	height: 56rpx;
	display: flex;
	align-items: center;
}

.top-text {
width: 110rpx;
height: 35rpx;
font-size: 25rpx;
text-align: center;
}

/* 编辑按钮组 */
.edit-buttons {
  display: flex;
  gap: 10rpx;
}

.edit-btn, .save-btn, .cancel-btn, .add-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  border: none;
}

.edit-btn {
  background-color: #48a8e4;
  color: white;
}

.save-btn {
  background-color: #52db9a;
  color: white;
}

.cancel-btn {
  background-color: #f05261;
  color: white;
}

.add-btn {
  background-color: #ffd061;
  color: #333;
}


/* 滚动 */
.scroll {
	flex: 1;
  z-index: 101;
  position: relative;
}

/* 课表项 */
.flex-item {
  width: 98rpx;
}

.course-item {
  position: absolute;
	display: flex;
	flex-direction: column;
	justify-content: center;
  align-items: center;
  border-radius: 6px;
  padding: 8rpx;
  box-sizing: border-box;
}

.smalltext {
  font-size: 24rpx;
	color: #fff;
	text-align: center;
  margin-bottom: 8rpx;
}

/* 课程操作按钮 */
.course-operations {
  display: flex;
  gap: 10rpx;
}

.delete-btn, .edit-course-btn {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: white;
}

/* 左边课程节数时间 */
.left {
	display: flex;
	flex-direction: column;
	background-color:#F5F7FA;
  width: 76rpx;
  height: 150rpx;
	font-size: 9pt;
	text-align: center;
}
.left text {
	margin-top: 10rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 12rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 500rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.modal-form {
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item label {
  font-size: 28rpx;
  color: #333;
  width: 150rpx;
}

.form-input, .form-picker {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: white;
}

.picker-text {
  color: #333;
}

.modal-buttons {
  display: flex;
  justify-content: space-around;
}

.modal-btn {
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  border: none;
}

.modal-btn.confirm {
  background-color: #48a8e4;
  color: white;
}

.modal-btn.cancel {
  background-color: #f05261;
  color: white;
}