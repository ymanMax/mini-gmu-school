/* pages/index/index.wxss */
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}



/* 轮播图 */
.swiper{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.swiper-container{
  width: 94%;
  height: 320rpx;
  margin: 20rpx auto;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.swiper-item{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.swiper-item-content{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper-item-content image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
  transition: transform 0.3s ease;
}

.swiper-item-content:active image{
  transform: scale(1.05);
}

.swiper-item-title{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.dots{
  width: auto;
  height: 12rpx;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
}

.dots-item{
  width: 8rpx;
  height: 8rpx;
  margin: 0rpx 8rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.dot-active{
  width: 20rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #ffffff;
}



/* 分类标签 */
.sort-nav{
  width: 94%;
  margin: 0 auto 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sort-nav-item{
  display: inline-block;
  width: 120rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333333;
  margin: 0rpx 25rpx 30rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.sort-nav-item:active{
  background-color: #f0f0f0;
  transform: scale(0.95);
}

.sort-nav-icon{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  border-radius: 50%;
  background-color: #f8f9fa;
  padding: 12rpx;
}

.sort-nav-text{
  display: block;
  font-weight: 400;
}